{
  "compilerOptions": {
    "module": "es6",
    "target": "es2021",
    "noImplicitAny": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist/node",
    "baseUrl": ".",
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "*.config.mjs"],
  "exclude": ["node_modules"]
}